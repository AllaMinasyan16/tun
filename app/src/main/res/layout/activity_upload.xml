<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/buttonsigncolor_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Ներբեռնելնկար_progress.layout"
                android:textSize="30sp"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/kaktus"
                android:id="@+id/uploadImage"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadTopic"
                android:background="@drawable/buttonsigncolor_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="@string/անունը_SignUp.edittext"
                android:gravity="start|center_vertical"
                android:textColor="@color/ButtonSignColor"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/uploadDesc"
                android:background="@drawable/buttonsigncolor_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="@string/Տեսակը_progress.layout"
                android:gravity="start|center_vertical"
                android:textColor="@color/ButtonSignColor"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/uploadLang"
                android:background="@drawable/buttonsigncolor_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="@string/Նկարագրություն_News.fragment.home"
                android:gravity="start|center_vertical"
                android:textColor="@color/ButtonSignColor"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/ՏԵՂԱԴՐԵԼ_progress.layout"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>